<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <!-- =============================================================== -->
    <!-- == Resilience Settings for Build Servers                     == -->
    <!-- =============================================================== -->
    <!-- These settings help prevent transient network errors on runners. -->
    <config>
        <!-- Increase the number of times NuGet will retry a failed HTTP request. -->
        <add key="http_retry_count" value="5" />
    </config>

    <!-- =============================================================== -->
    <!-- == Package Sources                                           == -->
    <!-- =============================================================== -->
    <!-- This tells NuGet where to look for packages, in order. -->
    <packageSources>
        <!-- Standard public NuGet feed -->
        <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
        <!-- The preview feed you need -->
        <add key="videolan-preview" value="https://f.feedz.io/videolan/preview/nuget/index.json" />
        <!-- Your private GitHub Packages feed -->
        <add key="github" value="https://nuget.pkg.github.com/Anthonyy232/index.json" />
    </packageSources>

    <!-- =============================================================== -->
    <!-- == Credentials for Private Feeds                             == -->
    <!-- =============================================================== -->
    <!-- This tells the workflow how to authenticate to the 'github' source. -->
    <packageSourceCredentials>
        <github>
            <add key="Username" value="Anthonyy232" />
            <add key="ClearTextPassword" value="%GITHUB_TOKEN%" />
        </github>
    </packageSourceCredentials>
</configuration>