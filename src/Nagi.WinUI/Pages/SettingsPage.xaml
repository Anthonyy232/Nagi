<Page
    x:Class="Nagi.WinUI.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:coreModels="using:Nagi.Core.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:localConverters="using:Nagi.WinUI.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Nagi.WinUI.Models"
    xmlns:mux="using:Microsoft.UI.Xaml"
    xmlns:navigation="using:Nagi.WinUI.Navigation"
    xmlns:resources="using:Nagi.WinUI.Resources"
    xmlns:viewmodels="using:Nagi.WinUI.ViewModels"
    mc:Ignorable="d"
    NavigationCacheMode="Required">

    <Page.Resources>
        <localConverters:ElementThemeToFriendlyStringConverter x:Key="ThemeToStringConverter" />
        <localConverters:BackdropMaterialToStringConverter x:Key="BackdropMaterialToStringConverter" />
        <localConverters:StringToFontFamilyConverter x:Key="StringToFontFamilyConverter" />
        <localConverters:FloatToDecimalStringConverter x:Key="FloatToDecimalStringConverter" />
        <localConverters:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter" />
        <localConverters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <!-- Shared template for service provider items in Lyrics and Metadata source lists -->
        <DataTemplate x:Key="ServiceProviderItemTemplate" x:DataType="viewmodels:ServiceProviderSettingViewModel">
            <Grid x:Name="ProviderItemRoot" Padding="12,8" VerticalAlignment="Center"
                  ToolTipService.ToolTip="{x:Bind Description}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="28" />
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Drag Handle -->
                <FontIcon
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                    Glyph="&#xE76F;" />

                <FontIcon
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    Foreground="{ThemeResource AppPrimaryColorBrush}"
                    Glyph="&#xE944;" />

                <TextBlock
                    Grid.Column="2"
                    Margin="8,0,12,0"
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="{x:Bind DisplayName}" />

                <ToggleSwitch
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    IsOn="{x:Bind IsEnabled, Mode=TwoWay}" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            MaxWidth="1200"
            Margin="36,24,36,0"
            Style="{StaticResource SettingsPageTitleTextStyle}"
            Text="{x:Bind resources:Strings.SettingsPage_Title, Mode=OneTime}" />

        <ScrollViewer
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto">
            <StackPanel
                Padding="36,0,36,24"
                MaxWidth="1200"
                HorizontalAlignment="Stretch"
                Spacing="{StaticResource SettingsCardSpacing}">

                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{x:Bind resources:Strings.SettingsPage_Section_Appearance, Mode=OneTime}" />

                <controls:SettingsExpander
                    x:Name="ThemeSettingsExpander"
                    Header="{x:Bind resources:Strings.SettingsPage_Theme_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_Theme_Description, Mode=OneTime}"
                    IsExpanded="False">
                    <controls:SettingsExpander.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE793;" />
                    </controls:SettingsExpander.HeaderIcon>
                    <ComboBox
                        MinWidth="300"
                        HorizontalAlignment="Right"
                        ItemsSource="{x:Bind ViewModel.AvailableThemes}"
                        SelectedItem="{x:Bind ViewModel.SelectedTheme, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="mux:ElementTheme">
                                <TextBlock Text="{x:Bind Converter={StaticResource ThemeToStringConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard>
                            <controls:SettingsCard.Header>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="{x:Bind resources:Strings.SettingsPage_AccentColor, Mode=OneTime}" VerticalAlignment="Center" />
                                    <HyperlinkButton
                                        VerticalAlignment="Center"
                                        Command="{x:Bind ViewModel.ResetAccentColorCommand}"
                                        Style="{StaticResource AnimatedHyperlinkButtonStyle}"
                                        Content="{x:Bind resources:Strings.SettingsPage_ResetAccentColor_Content, Mode=OneTime}"
                                        FontSize="12"
                                        Padding="4,2" />
                                </StackPanel>
                            </controls:SettingsCard.Header>
                            <ColorPicker
                                HorizontalAlignment="Right"
                                Color="{x:Bind ViewModel.AccentColor, Mode=TwoWay}"
                                IsAlphaEnabled="False"
                                IsColorChannelTextInputVisible="False"
                                IsColorSliderVisible="True"
                                IsColorSpectrumVisible="True"
                                IsHexInputVisible="True" />
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_WindowMaterial_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_WindowMaterial_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE7C4;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ComboBox
                        MinWidth="300"
                        HorizontalAlignment="Right"
                        ItemsSource="{x:Bind ViewModel.AvailableBackdropMaterials}"
                        SelectedItem="{x:Bind ViewModel.SelectedBackdropMaterial, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="models:BackdropMaterial">
                                <TextBlock
                                    Text="{x:Bind Converter={StaticResource BackdropMaterialToStringConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </controls:SettingsCard>

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_DynamicTheming_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_DynamicTheming_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE790;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ToggleSwitch
                        HorizontalAlignment="Right"
                        IsOn="{x:Bind ViewModel.IsDynamicThemingEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_Language_Header, Mode=OneTime}"
                    controls:SettingsCard.Description="{x:Bind resources:Strings.SettingsPage_Language_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE774;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ComboBox
                        MinWidth="200"
                        HorizontalAlignment="Right"
                        ItemsSource="{x:Bind ViewModel.AvailableLanguages}"
                        SelectedItem="{x:Bind ViewModel.SelectedLanguage, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="models:LanguageModel">
                                <TextBlock Text="{x:Bind DisplayName}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </controls:SettingsCard>

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_RememberWindowSize_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_RememberWindowSize_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE740;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ToggleSwitch
                        HorizontalAlignment="Right"
                        IsOn="{x:Bind ViewModel.IsRememberWindowSizeEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_RememberWindowPosition_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_RememberWindowPosition_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE737;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ToggleSwitch
                        HorizontalAlignment="Right"
                        IsOn="{x:Bind ViewModel.IsRememberWindowPositionEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_RememberNavState_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_RememberNavState_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE700;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ToggleSwitch
                        HorizontalAlignment="Right"
                        IsOn="{x:Bind ViewModel.IsRememberPaneStateEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_CustomizeNav_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_CustomizeNav_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE700;" />
                    </controls:SettingsCard.HeaderIcon>

                    <ListView
                        Width="350"
                        HorizontalAlignment="Right"
                        AllowDrop="True"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CanDragItems="True"
                        CanReorderItems="True"
                        CornerRadius="{StaticResource ControlCornerRadius}"
                        ItemContainerStyle="{StaticResource NavigationListViewItemStyle}"
                        ItemsSource="{x:Bind ViewModel.NavigationItems}"
                        SelectionMode="Single">

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="navigation:NavigationItemSetting">
                                <Grid x:Name="NavItemRoot" Padding="12,8" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="28" />
                                        <ColumnDefinition Width="32" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Drag Handle -->
                                    <FontIcon
                                        Grid.Column="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                        FontSize="12"
                                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                        Glyph="&#xE76F;" />

                                    <FontIcon
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="{x:Bind IconFontFamily, Converter={StaticResource StringToFontFamilyConverter}}"
                                        Foreground="{ThemeResource AppPrimaryColorBrush}"
                                        Glyph="{x:Bind IconGlyph}" />

                                    <TextBlock
                                        Grid.Column="2"
                                        Margin="8,0,12,0"
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="{x:Bind DisplayName}" />

                                    <ToggleSwitch
                                        Grid.Column="3"
                                        VerticalAlignment="Center"
                                        IsOn="{x:Bind IsEnabled, Mode=TwoWay}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </controls:SettingsCard>

                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{x:Bind resources:Strings.SettingsPage_Section_Player, Mode=OneTime}" />

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_VolumeNormalization_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_VolumeNormalization_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE995;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ToggleSwitch
                        HorizontalAlignment="Right"
                        IsOn="{x:Bind ViewModel.IsVolumeNormalizationEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>

                <controls:SettingsCard>
                    <controls:SettingsCard.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{x:Bind resources:Strings.SettingsPage_Equalizer, Mode=OneTime}" VerticalAlignment="Center" />
                            <HyperlinkButton
                                VerticalAlignment="Center"
                                Command="{x:Bind ViewModel.ResetEqualizerCommand}"
                                Style="{StaticResource AnimatedHyperlinkButtonStyle}"
                                Content="{x:Bind resources:Strings.SettingsPage_ResetEqualizer_Content, Mode=OneTime}"
                                FontSize="12"
                                Padding="4,2" />
                        </StackPanel>
                    </controls:SettingsCard.Header>
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE9E9;" />
                    </controls:SettingsCard.HeaderIcon>
                    <StackPanel Spacing="20" HorizontalAlignment="Center">
                        <!-- Preamp slider -->
                        <StackPanel Spacing="6" Width="320">
                            <TextBlock FontWeight="SemiBold" Text="{x:Bind resources:Strings.SettingsPage_Equalizer_Preamp, Mode=OneTime}" HorizontalAlignment="Center" />
                            <Slider
                                Maximum="20"
                                Minimum="-20"
                                StepFrequency="0.1"
                                Style="{StaticResource EqualizerSliderStyle}"
                                Value="{x:Bind ViewModel.EqualizerPreamp, Mode=TwoWay}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{ThemeResource CaptionTextBlockStyle}">
                                <Run Text="{x:Bind ViewModel.EqualizerPreamp, Mode=OneWay, Converter={StaticResource FloatToDecimalStringConverter}}" />
                                <Run Text=" dB" />
                            </TextBlock>
                        </StackPanel>

                        <!-- EQ Bands -->
                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.EqualizerBands}" HorizontalAlignment="Center">
                            <ItemsRepeater.Layout>
                                <StackLayout Orientation="Horizontal" Spacing="8" />
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:EqualizerBandViewModel">
                                    <StackPanel Width="44" Spacing="6">
                                        <!-- 0 dB indicator and slider container -->
                                        <Grid Height="140">
                                            <!-- 0 dB center line -->
                                            <Border
                                                Height="1"
                                                VerticalAlignment="Center"
                                                Background="{ThemeResource TextFillColorTertiaryBrush}"
                                                Opacity="0.5" />
                                            <!-- Vertical slider -->
                                            <Slider
                                                HorizontalAlignment="Center"
                                                Maximum="20"
                                                Minimum="-20"
                                                Orientation="Vertical"
                                                StepFrequency="0.1"
                                                Style="{StaticResource EqualizerSliderStyle}"
                                                Value="{x:Bind Gain, Mode=TwoWay}" />
                                        </Grid>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{ThemeResource CaptionTextBlockStyle}"
                                            Text="{x:Bind FrequencyLabel}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>

                        <ComboBox
                            HorizontalAlignment="Center"
                            MinWidth="160"
                            ItemsSource="{x:Bind ViewModel.AvailableEqualizerPresets}"
                            PlaceholderText="{x:Bind resources:Strings.SettingsPage_Equalizer_Preset_Custom_Placeholder, Mode=OneTime}"
                            SelectedItem="{x:Bind ViewModel.SelectedEqualizerPreset, Mode=TwoWay}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="coreModels:EqualizerPreset">
                                    <TextBlock Text="{x:Bind Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </controls:SettingsCard>

                <controls:SettingsCard>
                    <controls:SettingsCard.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{x:Bind resources:Strings.SettingsPage_CustomizePlayer, Mode=OneTime}" VerticalAlignment="Center" />
                            <HyperlinkButton
                                VerticalAlignment="Center"
                                Command="{x:Bind ViewModel.ResetPlayerButtonsCommand}"
                                Style="{StaticResource AnimatedHyperlinkButtonStyle}"
                                Content="{x:Bind resources:Strings.SettingsPage_ResetPlayerButtons_Content, Mode=OneTime}"
                                FontSize="12"
                                Padding="4,2" />
                        </StackPanel>
                    </controls:SettingsCard.Header>
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE768;" />
                    </controls:SettingsCard.HeaderIcon>

                    <StackPanel Spacing="12" HorizontalAlignment="Right">
                        <Border
                            MinWidth="520"
                            Padding="16"
                            HorizontalAlignment="Right"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource OverlayCornerRadius}">

                            <ListView
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                AllowDrop="True"
                                CanDragItems="True"
                                CanReorderItems="True"
                                ItemsSource="{x:Bind ViewModel.PlayerButtons, Mode=OneWay}"
                                SelectionMode="None"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                ScrollViewer.HorizontalScrollMode="Disabled"
                                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                ScrollViewer.VerticalScrollMode="Disabled">

                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsStackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>

                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="2,0" />
                                        <Setter Property="MinHeight" Value="0" />
                                        <Setter Property="MinWidth" Value="0" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <ListViewItemPresenter
                                                        ContentMargin="{TemplateBinding Padding}"
                                                        HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                        DragBackground="Transparent"
                                                        DragForeground="{ThemeResource TextFillColorPrimaryBrush}"
                                                        PointerOverBackground="Transparent"
                                                        SelectedBackground="Transparent"
                                                        SelectionCheckMarkVisualEnabled="False" />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>

                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:PlayerButtonSetting">
                                        <Grid
                                            x:Name="ButtonContainer"
                                            Width="Auto"
                                            MinWidth="28"
                                            Padding="4,8"
                                            Background="Transparent"
                                            CornerRadius="6"
                                            ToolTipService.ToolTip="{x:Bind DisplayName}">

                                            <Border
                                                x:Name="HoverHighlight"
                                                Width="57"
                                                Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                                CornerRadius="6"
                                                Visibility="{x:Bind IsNotSeparator, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                            <!-- Separator visual -->
                                            <Border
                                                x:Name="SeparatorVisual"
                                                Width="2"
                                                Height="100"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Background="{ThemeResource TextFillColorSecondaryBrush}"
                                                Opacity="0.7"
                                                CornerRadius="1"
                                                Visibility="{x:Bind IsSeparator, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                            <!-- Button content -->
                                            <StackPanel
                                                Width="57"
                                                Padding="0,8"
                                                Spacing="6"
                                                VerticalAlignment="Center"
                                                Visibility="{x:Bind IsNotSeparator, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">

                                                <!-- Drag indicator (shown on hover) -->
                                                <FontIcon
                                                    x:Name="DragIndicator"
                                                    HorizontalAlignment="Center"
                                                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                    FontSize="10"
                                                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                    Glyph="&#xE76F;" />

                                                <!-- Button preview -->
                                                <Button
                                                    Width="36"
                                                    Height="36"
                                                    HorizontalAlignment="Center"
                                                    IsHitTestVisible="False"
                                                    Opacity="{x:Bind IsEnabled, Converter={StaticResource BooleanToOpacityConverter}, Mode=OneWay}"
                                                    Style="{StaticResource MediaControlButtonStyle}">
                                                    <FontIcon
                                                        FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                        FontSize="14"
                                                        Glyph="{x:Bind IconGlyph}" />
                                                </Button>

                                                <!-- Enable/Disable toggle (shown on hover) -->
                                                <ToggleSwitch
                                                    x:Name="EnableDisableToggle"
                                                    Width="40"
                                                    Margin="0"
                                                    HorizontalAlignment="Center"
                                                    MinWidth="0"
                                                    MinHeight="0"
                                                    IsOn="{x:Bind IsEnabled, Mode=TwoWay}"
                                                    OffContent=""
                                                    OnContent="" />
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>

                        <TextBlock
                            MaxWidth="450"
                            HorizontalAlignment="Center"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind resources:Strings.SettingsPage_CustomizePlayer_Instructions, Mode=OneTime}"
                            TextAlignment="Center"
                            TextWrapping="Wrap"
                            Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                    </StackPanel>
                </controls:SettingsCard>

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_CollapsablePlayer_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_CollapsablePlayer_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE745;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ToggleSwitch
                        HorizontalAlignment="Right"
                        IsOn="{x:Bind ViewModel.IsPlayerAnimationEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_RestorePlayback_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_RestorePlayback_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE74E;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ToggleSwitch
                        HorizontalAlignment="Right"
                        IsOn="{x:Bind ViewModel.IsRestorePlaybackStateEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_AutoLaunch_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_AutoLaunch_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE7E8;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ToggleSwitch
                        HorizontalAlignment="Right"
                        IsOn="{x:Bind ViewModel.IsAutoLaunchEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_StartMinimized_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_StartMinimized_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE92C;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ToggleSwitch
                        HorizontalAlignment="Right"
                        IsOn="{x:Bind ViewModel.IsStartMinimizedEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_MinimizeToMiniPlayer_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_MinimizeToMiniPlayer_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE975;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ToggleSwitch
                        HorizontalAlignment="Right"
                        IsOn="{x:Bind ViewModel.IsMinimizeToMiniPlayerEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_HideToTray_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_HideToTray_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE78B;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ToggleSwitch
                        HorizontalAlignment="Right"
                        IsOn="{x:Bind ViewModel.IsHideToTrayEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_TrayCoverArt_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_TrayCoverArt_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xEB9F;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ToggleSwitch
                        HorizontalAlignment="Right"
                        IsOn="{x:Bind ViewModel.IsShowCoverArtInTrayFlyoutEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>

                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{x:Bind resources:Strings.SettingsPage_Section_Data, Mode=OneTime}" />

                <controls:SettingsCard
                    Header="{x:Bind resources:Strings.SettingsPage_ArtistSplitting_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_ArtistSplitting_Description, Mode=OneTime}">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE713;" />
                    </controls:SettingsCard.HeaderIcon>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBox
                            Width="150"
                            PlaceholderText="e.g. ;/\"
                            Text="{x:Bind ViewModel.ArtistSplitCharacters, Mode=TwoWay}" />
                        <Button
                            Command="{x:Bind ViewModel.RescanMetadataCommand}"
                            Content="{x:Bind resources:Strings.SettingsPage_RescanLibrary_Content, Mode=OneTime}" ToolTipService.ToolTip="{x:Bind resources:Strings.SettingsPage_RescanLibrary_ToolTip, Mode=OneTime}" />
                    </StackPanel>
                </controls:SettingsCard>

                <controls:SettingsExpander
                    x:Name="MetadataSettingsExpander"
                    Header="{x:Bind resources:Strings.SettingsPage_OnlineMetadata_Header, Mode=OneTime}" Description="{x:Bind resources:Strings.SettingsPage_OnlineMetadata_Description, Mode=OneTime}">
                    <controls:SettingsExpander.HeaderIcon>
                        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE8EC;" />
                    </controls:SettingsExpander.HeaderIcon>
                    <ToggleSwitch
                        HorizontalAlignment="Right"
                        IsOn="{x:Bind ViewModel.IsFetchOnlineMetadataEnabled, Mode=TwoWay}" />

                    <controls:SettingsExpander.Items>
