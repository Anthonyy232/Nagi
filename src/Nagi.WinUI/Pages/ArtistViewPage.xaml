<Page
    x:Class="Nagi.WinUI.Pages.ArtistViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ImageEx"
    xmlns:converters="using:Nagi.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Nagi.WinUI.ViewModels"
    xmlns:models="using:Nagi.Core.Models"
    xmlns:helpers="using:Nagi.Core.Helpers"
    xmlns:uihelpers="using:Nagi.WinUI.Helpers"
    x:Name="pageRoot"
    Background="Transparent"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Default album card template -->
        <DataTemplate x:Key="AlbumCardTemplate" x:DataType="viewmodels:ArtistAlbumViewModelItem">
            <Grid
                Width="{StaticResource AlbumCardWidth}"
                MinHeight="{StaticResource AlbumCardMinHeight}"
                Margin="8,16,8,16"
                Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        Width="{StaticResource AlbumCardImageSize}"
                        Height="{StaticResource AlbumCardImageSize}"
                        HorizontalAlignment="Center"
                        CornerRadius="12"
                        Visibility="{x:Bind IsArtworkAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <controls:ImageEx
                        CornerRadius="12"
                        IsCacheEnabled="True"
                        Source="{x:Bind uihelpers:ImageUriHelper.GetUriWithCacheBuster(CoverArtUri), Mode=OneWay}"
                        DecodePixelWidth="{StaticResource AlbumCardImageSize}"
                        DecodePixelType="Logical"
                        Stretch="UniformToFill" />
                </Border>
                <TextBlock
                    Grid.Row="1"
                    Margin="4,8,4,0"
                    MaxWidth="{StaticResource AlbumCardImageSize}"
                    HorizontalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="{x:Bind Name}"
                    TextTrimming="CharacterEllipsis"
                    TextWrapping="NoWrap" />
                <TextBlock
                    Grid.Row="2"
                    Margin="4,2,4,0"
                    MaxWidth="{StaticResource AlbumCardImageSize}"
                    HorizontalAlignment="Center"
                    Opacity="0.7"
                    Text="{x:Bind YearText}"
                    TextTrimming="CharacterEllipsis"
                    TextWrapping="NoWrap" />
            </Grid>
        </DataTemplate>

        <!-- Large display album card template -->
        <DataTemplate x:Key="AlbumCardTemplateLarge" x:DataType="viewmodels:ArtistAlbumViewModelItem">
            <Grid
                Width="{StaticResource AlbumCardWidthLarge}"
                MinHeight="{StaticResource AlbumCardMinHeightLarge}"
                Margin="8,16,8,16"
                Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        Width="{StaticResource AlbumCardImageSizeLarge}"
                        Height="{StaticResource AlbumCardImageSizeLarge}"
                        HorizontalAlignment="Center"
                        CornerRadius="12"
                        Visibility="{x:Bind IsArtworkAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <controls:ImageEx
                        CornerRadius="12"
                        IsCacheEnabled="True"
                        Source="{x:Bind uihelpers:ImageUriHelper.GetUriWithCacheBuster(CoverArtUri), Mode=OneWay}"
                        DecodePixelWidth="{StaticResource AlbumCardImageSizeLarge}"
                        DecodePixelType="Logical"
                        Stretch="UniformToFill" />
                </Border>
                <TextBlock
                    Grid.Row="1"
                    Margin="4,8,4,0"
                    MaxWidth="{StaticResource AlbumCardImageSizeLarge}"
                    HorizontalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="{x:Bind Name}"
                    TextTrimming="CharacterEllipsis"
                    TextWrapping="NoWrap" />
                <TextBlock
                    Grid.Row="2"
                    Margin="4,2,4,0"
                    MaxWidth="{StaticResource AlbumCardImageSizeLarge}"
                    HorizontalAlignment="Center"
                    Opacity="0.7"
                    Text="{x:Bind YearText}"
                    TextTrimming="CharacterEllipsis"
                    TextWrapping="NoWrap" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid KeyboardAcceleratorPlacementMode="Hidden">
        <Grid.KeyboardAccelerators>
            <KeyboardAccelerator Key="A" Modifiers="Control" Invoked="OnSelectAllAcceleratorInvoked" />
        </Grid.KeyboardAccelerators>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="SearchStates">
                <VisualState x:Name="SearchCollapsed">
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="SearchTextBox"
                            Storyboard.TargetProperty="Width"
                            To="0"
                            Duration="0:0:0.3"
                            EnableDependentAnimation="True">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseInOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>

                        <DoubleAnimation
                            Storyboard.TargetName="SearchTextBox"
                            Storyboard.TargetProperty="Opacity"
                            To="0"
                            Duration="0:0:0.15" />

                        <ObjectAnimationUsingKeyFrames
                            Storyboard.TargetName="SearchTextBox"
                            Storyboard.TargetProperty="IsHitTestVisible">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="False" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames
                            Storyboard.TargetName="SearchIcon"
                            Storyboard.TargetProperty="Glyph">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="&#xE721;" />
                            <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="&#xE721;" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="SearchExpanded">
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetName="SearchTextBox"
                            Storyboard.TargetProperty="Width"
                            To="{StaticResource SearchBoxExpandedWidth}"
                            Duration="0:0:0.3"
                            EnableDependentAnimation="True">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseInOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>

                        <DoubleAnimation
                            Storyboard.TargetName="SearchTextBox"
                            Storyboard.TargetProperty="Opacity"
                            To="1"
                            BeginTime="0:0:0.15"
                            Duration="0:0:0.15" />

                        <ObjectAnimationUsingKeyFrames
                            Storyboard.TargetName="SearchTextBox"
                            Storyboard.TargetProperty="IsHitTestVisible">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="True" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames
                            Storyboard.TargetName="SearchIcon"
                            Storyboard.TargetProperty="Glyph">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="&#xE711;" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
            <VisualStateGroup x:Name="WindowSizeStates">
                <!-- Large displays (1600px+) -->
                <VisualState x:Name="WideLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1600" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!-- Increase search box width -->
                        <Setter Target="SearchTextBox.Width" Value="{StaticResource SearchBoxExpandedWidthLarge}" />
                        <!-- Scale up album cards for better space utilization -->
                        <Setter Target="AlbumGridView.ItemTemplate" Value="{StaticResource AlbumCardTemplateLarge}" />
                    </VisualState.Setters>
                </VisualState>

                <!-- Normal/Small displays -->
                <VisualState x:Name="NormalLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <!-- Default sizing from resources -->
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Padding="{StaticResource ViewPageHeaderPadding}">
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Artist Image and Info Content (unchanged) -->
                    <Grid Grid.Column="0" Width="{StaticResource HeaderImageSize}" Height="{StaticResource HeaderImageSize}" CornerRadius="75"
                          PointerEntered="ArtistImage_PointerEntered" PointerExited="ArtistImage_PointerExited"
                          Background="Transparent">
                        <controls:ImageEx
                            CornerRadius="75"
                            IsCacheEnabled="True"
                            Source="{x:Bind ViewModel.ArtistImageUri, Mode=OneWay, Converter={StaticResource StringToImageSourceConverter}, FallbackValue=null}"
                            Stretch="UniformToFill"
                            DecodePixelWidth="{StaticResource HeaderImageSize}"
                            DecodePixelType="Logical"
                            Visibility="{x:Bind ViewModel.ArtistImageUri, Mode=OneWay, Converter={StaticResource NullOrEmptyStringToVisibilityConverter}}" />

                        <Grid
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="75"
                            Visibility="{x:Bind ViewModel.ArtistImageUri, Mode=OneWay, Converter={StaticResource InverseNullOrEmptyStringToVisibilityConverter}}">
                            <FontIcon
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="64"
                                Glyph="" />
                        </Grid>

                        <!-- Edit Overlay -->
                        <Grid x:Name="EditOverlay" 
                              Background="#66000000" 
                              CornerRadius="75" 
                              Opacity="0" 
                              PointerPressed="EditOverlay_PointerPressed">
                            <FontIcon Glyph="&#xE70F;" Foreground="White" FontSize="32" />
                            <ToolTipService.ToolTip>
                                <ToolTip x:Uid="ArtistViewPage_EditOverlay" />
                            </ToolTipService.ToolTip>
                            <Grid.ContextFlyout>
                                <MenuFlyout x:Name="ImageEditFlyout">
                                    <MenuFlyoutItem x:Uid="ArtistViewPage_ImageMenu_ChangeImage" Click="ChangeImage_Click" />
                                    <MenuFlyoutItem x:Uid="ArtistViewPage_ImageMenu_RemoveImage" Click="RemoveImage_Click" 
                                                    Visibility="{x:Bind ViewModel.IsCustomImage, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </MenuFlyout>
                            </Grid.ContextFlyout>
                        </Grid>
                    </Grid>

                    <StackPanel Grid.Column="1" Margin="24,0,0,0" VerticalAlignment="Center" Spacing="8">
                        <TextBlock x:Uid="ArtistViewPage_Header_Label" Style="{ThemeResource CaptionTextBlockStyle}" />
                        <TextBlock Style="{ThemeResource HeaderTextBlockStyle}"
                                   Text="{x:Bind ViewModel.ArtistName, Mode=OneWay}" />
                        <TextBlock
                            MaxLines="3"
                            Opacity="0.8"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{x:Bind ViewModel.ArtistBio, Mode=OneWay}"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>

                <Grid x:Name="AlbumsViewport" VerticalAlignment="Top"
                      Visibility="{x:Bind ViewModel.HasAlbums, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                    <ScrollViewer VerticalScrollMode="Disabled" VerticalScrollBarVisibility="Hidden">
                        <StackPanel x:Name="AlbumsContent" Spacing="2" VerticalAlignment="Top" Padding="0,0,0,0" SizeChanged="OnAlbumsContentSizeChanged">
                        <TextBlock x:Uid="ArtistViewPage_Albums_Title" Style="{StaticResource SectionHeaderTextBlockStyle}" Foreground="{StaticResource AppPrimaryColorBrush}" />
                        <GridView
                            x:Name="AlbumGridView"
                            Padding="0,0,16,0"
                            IsItemClickEnabled="True"
                            ItemClick="AlbumGridView_ItemClick"
                            ItemsSource="{x:Bind ViewModel.Albums, Mode=OneWay}"
                            SelectionMode="None"
                            ItemTemplate="{StaticResource AlbumCardTemplate}"
                            ScrollViewer.HorizontalScrollMode="Auto"
                            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                            ScrollViewer.IsHorizontalRailEnabled="True"
                            ScrollViewer.VerticalScrollMode="Disabled"
                            ScrollViewer.VerticalScrollBarVisibility="Hidden">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsStackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        <TextBlock x:Uid="ArtistViewPage_Songs_Title" Style="{StaticResource SectionHeaderTextBlockStyle}" Foreground="{StaticResource AppPrimaryColorBrush}" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="13"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Text="{x:Bind ViewModel.SelectedItemsCountText, Mode=OneWay}"
                            Visibility="{x:Bind ViewModel.HasSelectedSongs, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                       <TextBlock VerticalAlignment="Center" FontSize="13"
                                   Foreground="{ThemeResource TextFillColorSecondary}"
                                   Text="{x:Bind ViewModel.TotalItemsText, Mode=OneWay}"
                                   Visibility="{x:Bind ViewModel.HasSelectedSongs, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                        <!-- Search functionality -->
                        <Grid>
                            <TextBox x:Name="SearchTextBox"
                                     x:Uid="ArtistViewPage_SearchBox"
                                     Style="{StaticResource SearchTextBoxStyle}"
                                     Width="0"
                                     Opacity="0"
                                     IsHitTestVisible="False"
                                     HorizontalAlignment="Right"
                                     KeyDown="OnSearchTextBoxKeyDown"
                                     Text="{x:Bind ViewModel.SearchTerm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Canvas.ZIndex="0">
                                </TextBox>

                            <Button x:Name="SearchToggleButton"
                                    x:Uid="ArtistViewPage_SearchButton"
                                    Click="OnSearchToggleButtonClick"
                                    Style="{StaticResource SongListViewPageIconButton}"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,1,0"
                                    IsHitTestVisible="True"
                                    Canvas.ZIndex="1">
                                <FontIcon x:Name="SearchIcon" FontSize="16" Glyph="&#xE721;" />
                            </Button>
                        </Grid>

                        <Button x:Uid="ArtistViewPage_PlayAllButton" Style="{StaticResource SongListViewPageIconButton}"
                                Command="{x:Bind ViewModel.PlayAllSongsCommand}">
                            <FontIcon Glyph="" FontSize="16" />
                        </Button>

                        <Button x:Uid="ArtistViewPage_ShufflePlayButton" Style="{StaticResource SongListViewPageIconButton}"
                                Command="{x:Bind ViewModel.ShuffleAndPlayAllSongsCommand}">
                            <FontIcon Glyph="" FontSize="16" />
                        </Button>

                        <Button Style="{StaticResource SongListViewPageIconButton}"
                                ToolTipService.ToolTip="{x:Bind ViewModel.CurrentSortOrderText, Mode=OneWay}">
                            <Button.Flyout>
                                <MenuFlyout Placement="Bottom">
                                    <RadioMenuFlyoutItem GroupName="ArtistViewSort" Command="{x:Bind ViewModel.RefreshOrSortSongsCommand}"
                                                    CommandParameter="TitleAsc" Text="{x:Bind helpers:SortOrderHelper.TitleAscLabel}"
                                                    IsChecked="{x:Bind ViewModel.CurrentSortOrder, Mode=OneWay, Converter={StaticResource SortOrderEqualsConverter}, ConverterParameter=TitleAsc}" />
                                    <RadioMenuFlyoutItem GroupName="ArtistViewSort" Command="{x:Bind ViewModel.RefreshOrSortSongsCommand}"
                                                    CommandParameter="TitleDesc" Text="{x:Bind helpers:SortOrderHelper.TitleDescLabel}"
                                                    IsChecked="{x:Bind ViewModel.CurrentSortOrder, Mode=OneWay, Converter={StaticResource SortOrderEqualsConverter}, ConverterParameter=TitleDesc}" />
                                    <RadioMenuFlyoutItem GroupName="ArtistViewSort" Command="{x:Bind ViewModel.RefreshOrSortSongsCommand}"
                                                    CommandParameter="YearAsc" Text="{x:Bind helpers:SortOrderHelper.YearOldestLabel}"
                                                    IsChecked="{x:Bind ViewModel.CurrentSortOrder, Mode=OneWay, Converter={StaticResource SortOrderEqualsConverter}, ConverterParameter=YearAsc}" />
                                    <RadioMenuFlyoutItem GroupName="ArtistViewSort" Command="{x:Bind ViewModel.RefreshOrSortSongsCommand}"
                                                    CommandParameter="YearDesc" Text="{x:Bind helpers:SortOrderHelper.YearNewestLabel}"
                                                    IsChecked="{x:Bind ViewModel.CurrentSortOrder, Mode=OneWay, Converter={StaticResource SortOrderEqualsConverter}, ConverterParameter=YearDesc}" />
                                    <RadioMenuFlyoutItem GroupName="ArtistViewSort" Command="{x:Bind ViewModel.RefreshOrSortSongsCommand}"
                                                    CommandParameter="AlbumAsc" Text="{x:Bind helpers:SortOrderHelper.AlbumAscLabel}"
                                                    IsChecked="{x:Bind ViewModel.CurrentSortOrder, Mode=OneWay, Converter={StaticResource SortOrderEqualsConverter}, ConverterParameter=AlbumAsc}" />
                                    <RadioMenuFlyoutItem GroupName="ArtistViewSort" Command="{x:Bind ViewModel.RefreshOrSortSongsCommand}"
                                                    CommandParameter="AlbumDesc" Text="{x:Bind helpers:SortOrderHelper.AlbumDescLabel}"
                                                    IsChecked="{x:Bind ViewModel.CurrentSortOrder, Mode=OneWay, Converter={StaticResource SortOrderEqualsConverter}, ConverterParameter=AlbumDesc}" />
                                </MenuFlyout>
                            </Button.Flyout>
                            <FontIcon FontSize="16" Glyph="&#xE8CB;" />
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <ListView
            Grid.Row="1"
            x:Name="SongsListView"
            Padding="{StaticResource SongListViewPadding}"
            IsItemClickEnabled="True"
            ItemContainerStyle="{StaticResource SongListViewPageListViewItemStyle}"
            ItemsSource="{x:Bind ViewModel.Songs, Mode=OneWay}"
            SelectionChanged="SongsListView_SelectionChanged"
            SelectionMode="Extended"
            ContainerContentChanging="OnSongsListViewContainerContentChanging"
            DoubleTapped="SongsListView_DoubleTapped">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Song">
                    <Grid Height="54" ColumnSpacing="12" Background="Transparent">
                        <Grid.ContextFlyout>
                            <MenuFlyout Opening="SongItemMenuFlyout_Opening">
                                <MenuFlyoutItem
                                    x:Uid="ArtistViewPage_SongMenu_Play"
                                    Command="{Binding DataContext.PlaySelectedSongsCommand, ElementName=pageRoot}" />
                                <MenuFlyoutItem
                                    x:Uid="ArtistViewPage_SongMenu_PlayNext"
                                    Command="{Binding DataContext.PlaySelectedSongsNextCommand, ElementName=pageRoot}" />
                                <MenuFlyoutItem
                                    x:Uid="ArtistViewPage_SongMenu_AddToQueue"
                                    Command="{Binding DataContext.AddSelectedSongsToQueueCommand, ElementName=pageRoot}" />
                                <MenuFlyoutSubItem x:Name="AddToPlaylistSubMenu" x:Uid="ArtistViewPage_SongMenu_AddToPlaylist" />
                                <MenuFlyoutSeparator
                                    Visibility="{Binding DataContext.IsSingleSongSelected, ElementName=pageRoot, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <MenuFlyoutItem
                                    x:Uid="ArtistViewPage_SongMenu_GoToAlbum"
                                    Command="{Binding DataContext.GoToAlbumCommand, ElementName=pageRoot}"
                                    CommandParameter="{x:Bind}"
                                    Visibility="{Binding DataContext.IsSingleSongSelected, ElementName=pageRoot, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <MenuFlyoutItem
                                    x:Uid="ArtistViewPage_SongMenu_ShowInExplorer"
                                    Command="{Binding DataContext.ShowInFileExplorerCommand, ElementName=pageRoot}"
                                    CommandParameter="{x:Bind}"
                                    Visibility="{Binding DataContext.IsSingleSongSelected, ElementName=pageRoot, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition MinWidth="100" Width="1.5*" />
                            <ColumnDefinition MinWidth="40" Width="0.5*" />
                            <ColumnDefinition MinWidth="50" Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="0"
                            x:Uid="ArtistViewPage_SongPlayButton"
                            Command="{Binding DataContext.PlaySongCommand, ElementName=pageRoot}"
                            CommandParameter="{x:Bind}"
                            Style="{StaticResource SongListViewPageSongPlayButtonStyle}">
                            <Border Width="42" Height="42" CornerRadius="12"
                                    Visibility="{x:Bind IsArtworkAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <controls:ImageEx
                                    IsCacheEnabled="True"
                                    Stretch="UniformToFill"
                                    DecodePixelWidth="48"
                                    DecodePixelType="Logical"
                                    Source="{x:Bind uihelpers:ImageUriHelper.GetUriWithCacheBuster(AlbumArtUriFromTrack, FileModifiedDate), Mode=OneWay}" />

                            </Border>
                        </Button>

                        <TextBlock Grid.Column="1"
                                   Style="{StaticResource SongListViewPageBodyStrongTextBlockStyle}"
                                   Text="{x:Bind Title}" TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap"
                                   VerticalAlignment="Center" />

                        <HyperlinkButton
                            Grid.Column="2"
                            Command="{Binding DataContext.GoToAlbumCommand, ElementName=pageRoot}"
                            CommandParameter="{x:Bind}"
                            Content="{x:Bind Album.Title}"
                            Style="{StaticResource SongListHyperlinkButtonStyle}" />

                        <TextBlock Grid.Column="3" HorizontalAlignment="Center"
                                   Style="{StaticResource SongListViewPageSecondaryTextBlockStyle}"
                                   Text="{x:Bind Album.Year}" />
                        <TextBlock Grid.Column="4" Margin="0,0,12,0" HorizontalAlignment="Right"
                                   Style="{StaticResource SongListViewPageSecondaryTextBlockStyle}"
                                   Text="{x:Bind Duration, Converter={StaticResource TimeSpanToTimeStringConverter}}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Empty State -->
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="16"
            Visibility="{x:Bind ViewModel.Songs.Count, Mode=OneWay, Converter={StaticResource InverseCollectionCountToVisibilityConverter}}">
            <StackPanel.ChildrenTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromVerticalOffset="20" />
                </TransitionCollection>
            </StackPanel.ChildrenTransitions>
            <FontIcon
                Glyph="&#xE8D6;"
                FontSize="48"
                Margin="0,0,0,12"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                HorizontalAlignment="Center" />
            <TextBlock
                x:Uid="ArtistViewPage_Empty_Title"
                Style="{StaticResource TitleTextBlockStyle}"
                HorizontalAlignment="Center" />
            <TextBlock
                x:Uid="ArtistViewPage_Empty_Subtitle"
                Style="{StaticResource SubtitleTextBlockStyle}"
                HorizontalAlignment="Center"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
        </StackPanel>
    </Grid>
</Page>