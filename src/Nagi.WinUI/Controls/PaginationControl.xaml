<UserControl
    x:Class="Nagi.WinUI.Controls.PaginationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
        <TextBlock Text="Items per page:" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
        
        <ComboBox ItemsSource="{x:Bind PageSizeOptions}" SelectedItem="{x:Bind ViewModel.SongsPerPage, Mode=TwoWay}" Width="80" Margin="0,0,16,0" FontSize="12" />

        <Button Command="{x:Bind ViewModel.PreviousPageCommand, Mode=OneWay}" 
                IsEnabled="{x:Bind ViewModel.HasPreviousPage, Mode=OneWay}"
                Style="{ThemeResource SubtleButtonStyle}"
                ToolTipService.ToolTip="Previous Page"
                Width="32" Height="32" Padding="0">
            <FontIcon Glyph="&#xE76B;" FontSize="12" />
        </Button>
        
        <TextBlock VerticalAlignment="Center" Margin="4,0" FontSize="12">
            <Run Text="{x:Bind ViewModel.CurrentPage, Mode=OneWay}" FontWeight="SemiBold"/>
            <Run Text=" / " Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <Run Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </TextBlock>

        <Button Command="{x:Bind ViewModel.NextPageCommand, Mode=OneWay}" 
                IsEnabled="{x:Bind ViewModel.HasNextPage, Mode=OneWay}"
                Style="{ThemeResource SubtleButtonStyle}"
                ToolTipService.ToolTip="Next Page"
                Width="32" Height="32" Padding="0">
            <FontIcon Glyph="&#xE76C;" FontSize="12" />
        </Button>
    </StackPanel>
</UserControl>
