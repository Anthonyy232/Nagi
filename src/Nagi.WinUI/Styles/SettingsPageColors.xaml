<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animation="using:Microsoft.UI.Xaml.Media.Animation"
    xmlns:primitives="using:Microsoft.UI.Xaml.Controls.Primitives">



    <!-- Spacing resource for consistency between settings cards. -->
    <x:Double x:Key="SettingsCardSpacing">4</x:Double>

    <!-- Style for section headers (e.g., "Appearance", "About"). -->
    <Style
        x:Key="SettingsSectionHeaderTextBlockStyle"
        BasedOn="{StaticResource BodyStrongTextBlockStyle}"
        TargetType="TextBlock">
        <Setter Property="Margin" Value="1,30,0,6" />
    </Style>

    <!-- Style for the main "Settings" page title. -->
    <Style x:Key="SettingsPageTitleTextStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextBlockStyle}">
        <Setter Property="Foreground" Value="{ThemeResource AppPrimaryColorBrush}" />
    </Style>

    <!-- Implicit style for all ToggleSwitch controls on the page. -->
    <Style TargetType="ToggleSwitch" BasedOn="{StaticResource DefaultToggleSwitchStyle}">
        <Setter Property="OnContent" Value="" />
        <Setter Property="OffContent" Value="" />
    </Style>

    <!-- Defines the appearance of the "Reset" buttons. -->
    <Style x:Key="SettingsPageResetButtonStyle" TargetType="Button" BasedOn="{StaticResource AnimatedAccentButtonStyle}">
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
    </Style>

    <!--
    Style for the thumb of the equalizer sliders.
    This is identical to the media slider thumb, ensuring visual consistency.
    -->
    <Style x:Key="EqualizerSliderThumbStyle" TargetType="primitives:Thumb">
        <Setter Property="Background" Value="{StaticResource AppPrimaryColorBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="primitives:Thumb">
                    <Grid RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="thumbScale" />
                        </Grid.RenderTransform>
                        <Ellipse x:Name="ThumbVisual"
                                 Fill="{TemplateBinding Background}"
                                 Width="{TemplateBinding Width}"
                                 Height="{TemplateBinding Height}"
                                 Stroke="{ThemeResource ControlStrokeColorDefaultBrush}"
                                 StrokeThickness="1" />
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="thumbScale" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.2" EasingFunction="{StaticResource CubicEaseOut}" />
                                        <DoubleAnimation Storyboard.TargetName="thumbScale" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.2" EasingFunction="{StaticResource CubicEaseOut}" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="thumbScale" Storyboard.TargetProperty="ScaleX" To="1.25" Duration="0:0:0.3" EasingFunction="{StaticResource CubicEaseOut}" />
                                        <DoubleAnimation Storyboard.TargetName="thumbScale" Storyboard.TargetProperty="ScaleY" To="1.25" Duration="0:0:0.3" EasingFunction="{StaticResource CubicEaseOut}" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="thumbScale" Storyboard.TargetProperty="ScaleX" To="0.9" Duration="0:0:0.1" EasingFunction="{StaticResource CubicEaseOut}" />
                                        <DoubleAnimation Storyboard.TargetName="thumbScale" Storyboard.TargetProperty="ScaleY" To="0.9" Duration="0:0:0.1" EasingFunction="{StaticResource CubicEaseOut}" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ThumbVisual"
                                                                       Storyboard.TargetProperty="Fill">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="{ThemeResource SystemControlDisabledBaseMediumLowBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ThumbVisual"
                                                                       Storyboard.TargetProperty="Stroke">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="{ThemeResource ControlStrokeColorDisabledBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--
    Custom style for the equalizer sliders, replacing the simple one.
    It uses a full ControlTemplate to apply the custom thumb style and colors.
    Includes both Horizontal and Vertical templates.
    -->
    <Style x:Key="EqualizerSliderStyle" TargetType="Slider">
        <Setter Property="Background" Value="{ThemeResource ControlStrokeColorSecondaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource AppPrimaryColorBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid Margin="{TemplateBinding Padding}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver" />
                                <VisualState x:Name="Pressed" />
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <!-- Horizontal Disabled State -->
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="HorizontalTrackRect"
                                                                       Storyboard.TargetProperty="Fill">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="{ThemeResource SystemControlDisabledBaseMediumLowBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="HorizontalDecreaseRect"
                                                                       Storyboard.TargetProperty="Fill">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="{ThemeResource SystemControlDisabledBaseMediumLowBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <!-- Vertical Disabled State -->
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="VerticalTrackRect"
                                                                       Storyboard.TargetProperty="Fill">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="{ThemeResource SystemControlDisabledBaseMediumLowBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="VerticalDecreaseRect"
                                                                       Storyboard.TargetProperty="Fill">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="{ThemeResource SystemControlDisabledBaseMediumLowBrush}" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <!-- Template for Horizontal Sliders (e.g., Preamp) -->
                        <Grid x:Name="HorizontalTemplate" MinHeight="32">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Rectangle x:Name="HorizontalTrackRect" Grid.ColumnSpan="3" Grid.Row="1" Height="8"
                                       RadiusX="4" RadiusY="4" Fill="{TemplateBinding Background}" />
                            <Rectangle x:Name="HorizontalDecreaseRect" Grid.Row="1" Height="8" RadiusX="4" RadiusY="4"
                                       Fill="{TemplateBinding Foreground}" />
                            <primitives:Thumb x:Name="HorizontalThumb" Grid.Column="1" Grid.Row="1"
                                              Style="{StaticResource EqualizerSliderThumbStyle}"
                                              DataContext="{TemplateBinding Value}"
                                              AutomationProperties.AccessibilityView="Raw" />
                        </Grid>

                        <!-- Template for Vertical Sliders (e.g., EQ Bands) -->
                        <Grid x:Name="VerticalTemplate" MinWidth="32">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Rectangle x:Name="VerticalTrackRect" Grid.RowSpan="3" Grid.Column="1" Width="8"
                                       RadiusX="4" RadiusY="4" Fill="{TemplateBinding Background}" />
                            <Rectangle x:Name="VerticalDecreaseRect" Grid.Column="1" Grid.Row="2" Width="8" RadiusX="4"
                                       RadiusY="4" Fill="{TemplateBinding Foreground}" />
                            <primitives:Thumb x:Name="VerticalThumb" Grid.Row="1" Grid.Column="1"
                                              Style="{StaticResource EqualizerSliderThumbStyle}"
                                              DataContext="{TemplateBinding Value}"
                                              AutomationProperties.AccessibilityView="Raw" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style for the ListViewItems in the "Customize Navigation" card. -->
    <Style x:Key="NavigationListViewItemStyle" TargetType="ListViewItem" BasedOn="{StaticResource DefaultListViewItemStyle}">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="MinHeight" Value="0" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

</ResourceDictionary>