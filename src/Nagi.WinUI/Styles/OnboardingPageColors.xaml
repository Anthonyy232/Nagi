<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    This dictionary contains styles specific to the OnboardingPage.
    -->

    <!--
    Style for the main brand-colored button used for primary actions.
    -->
    <Style x:Key="BrandAccentButtonStyle" TargetType="Button" BasedOn="{StaticResource AnimatedAccentButtonStyle}" />

    <!--
    Implicit style for progress bars on the onboarding page.
    -->
    <Style TargetType="ProgressBar">
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Height" Value="6" />
    </Style>

</ResourceDictionary>