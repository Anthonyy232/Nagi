<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animation="using:Microsoft.UI.Xaml.Media.Animation">



    <!-- Style for the "Create Playlist" button with hover and press animations. -->
    <Style x:Key="PlaylistPageCreatePlaylistButtonStyle" TargetType="Button"
           BasedOn="{StaticResource AnimatedAccentButtonStyle}" />

    <!-- Defines the visual appearance and interactive states for playlist items in a GridView. -->
    <Style x:Key="PlaylistPageGridViewItemStyle" TargetType="GridViewItem" BasedOn="{StaticResource AnimatedGridViewItemStyle}" />
</ResourceDictionary>